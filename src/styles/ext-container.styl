.ext-container
  display: flex
  gap: 8px

.layout-hbox
  flex-direction: row

.layout-vbox
  flex-direction: column

.layout-fit
  position: relative
  > *
    position: absolute
    inset: 0

.layout-border
  position: relative
  display: block

  > .region-north,
  > .region-south,
  > .region-west,
  > .region-east,
  > .region-center
    padding: 8px
    box-sizing: border-box

// Controle de alinhamento horizontal e vertical
.ext-container[align="start"]
  align-items: flex-start

.ext-container[align="center"]
  align-items: center

.ext-container[align="end"]
  align-items: flex-end

.ext-container[justify="start"]
  justify-content: flex-start

.ext-container[justify="center"]
  justify-content: center

.ext-container[justify="end"]
  justify-content: flex-end

.ext-container[justify="space-between"]
  justify-content: space-between

.ext-container[justify="space-around"]
  justify-content: space-around

// Grow dos filhos (item flexível)
.ext-grow
  flex: 1 1 auto

// Colapsável
.collapsed
  display: none

.collapse-toggle
  position: absolute
  top: 4px
  right: 4px
  background: #ddd
  border-radius: 4px
  padding: 2px
  font-size: 1rem
  line-height: 1
  width: 1.5rem
  height: 1.5rem
  display: flex
  align-items: center
  justify-content: center
  border: none
  cursor: pointer

// Splitter (alça de redimensionamento)
.splitter
  position: absolute
  background: #ccc
  opacity: 0.5
  z-index: 10
  cursor: ew-resize

  &.horizontal
    height: 5px
    width: 100%
    cursor: ns-resize

  &.vertical
    width: 5px
    height: 100%
    cursor: ew-resize

// Responsividade
@media (max-width: 600px)
  .layout-border > .region-west,
  .layout-border > .region-east
    display: none
