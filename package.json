{
  "name": "litext",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "check": "npm outdated --long",
    "upgrade": "ncu -u && npm install",
    "dev": "vite",
    "dev:debug": "vite --debug",
    "start": "npm run dev",
    "start:debug": "node --inspect=0.0.0.0:35003 node_modules/vite/bin/vite.js",

    "lint": "eslint ./src --fix && eslint ./mocks --fix",

    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage",

    "build:types": "tsc --project tsconfig.build.json",
    "clean": "rm -rf dist node_modules/.vite node_modules/.cache",
    "build": "npm run clean && vite build && npm run build:types",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@lit-labs/testing": "^0.2.7",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@vitest/coverage-v8": "^3.1.3",
    "c8": "^10.1.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-testing-library": "^7.2.0",
    "express": "^5.1.0",
    "jsdom": "^26.1.0",
    "lit": "^3.3.0",
    "minify": "^14.0.0",
    "prettier": "^3.5.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.3"
  },
  "dependencies": {
    "lit-html": "^3.3.0"
  }
}
